  "background_color": "#ffffff",
  "theme_color": "#2ecc71",
  "orientation": "portrait",
  "lang": "pt-BR",
  "scope": "/",
  "description": "Calcule IMC, proteínas, TMB e muito mais. Sua saúde em um clique!",
  "categories": ["health", "fitness", "medical", "lifestyle"],

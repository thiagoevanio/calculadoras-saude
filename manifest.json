{
  "name": "Calcule Sua Saúde",
  "short_name": "C-Saúde",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2ecc71",
  "orientation": "portrait",
  "lang": "pt-BR",
  "scope": "/",
  "description": "Calcule IMC, proteínas, TMB e muito mais. Sua saúde em um clique!",
  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    },
    {
      "src": "icons/icon-1024.png",
      "sizes": "1024x1024",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/screenshot-1.png",
      "sizes": "1280x720",
      "type": "image/png"
    },
    {
      "src": "screenshots/screenshot-2.png",
      "sizes": "1280x720",
      "type": "image/png"
    },
    {
      "src": "screenshots/screenshot-3.png",
      "sizes": "1920x1080",
      "type": "image/png"
    }
  ],
  "launch_handler": {
    "action": "navigate",
    "url": "/home"
  },
  "prefer_related_applications": true,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.example.pwa",
      "id": "com.example.pwa"
    },
    {
      "platform": "itunes",
      "url": "https://apps.apple.com/us/app/id1234567890"
    }
  ],
  "display_override": ["window-controls-overlay"],
  "side_panel": {
    "type": "edge"
  },
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/pdf": [".pdf"],
        "image/jpeg": [".jpg", ".jpeg"]
      }
    }
  ],
  "handle_links": {
    "action": "/open-link",
    "filter": {
      "include": ["https://example.com/*"]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "myapp",
      "url": "/open-protocol?url=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "Calcule IMC",
      "short_name": "IMC",
      "description": "Calcule seu Índice de Massa Corporal.",
      "url": "/imc",
      "icons": [
        {
          "src": "icons/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Calcule Proteínas",
      "short_name": "Proteínas",
      "description": "Calcule suas necessidades de proteína.",
      "url": "/proteinas",
      "icons": [
        {
          "src": "icons/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ],
  "widgets": [
    {
      "id": "health-widgets", 
      "name": "Widgets de Saúde",
      "description": "Widget para calcular índices de saúde.",
      "url": "/widget",
      "icons": [
        {
          "src": "icons/icon-192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ]
    }
  ]
}
